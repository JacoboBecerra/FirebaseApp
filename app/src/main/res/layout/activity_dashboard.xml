<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView para mostrar las recetas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <!-- Botón de Logout en la parte superior -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true" />

    <!-- En activity_dashboard.xml -->
    <Button
        android:id="@+id/themeToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar tema"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_theme_toggle"
        android:drawablePadding="8dp"/>

</RelativeLayout>

